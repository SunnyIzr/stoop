<body class="password-page">

  <div class="container">
    <img class="img-responsive logo" src="<%= asset_path 'logos/signup-logo-beta.jpg' %>" alt="Logo" />
    <h2>Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "New password (8 characters minimum)" %>

      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm new password' %>

      <%= f.submit "Change my password", class: 'reset-button' %>
    <% end %>

    <div class="row">
      <div class="col-sm-6 social-login">
        <a href="<%= user_omniauth_authorize_path(:facebook) %>">
          <img class="img-responsive" src="<%= asset_path 'login-fb.jpg' %>" alt="Log In With FaceBook">
        </a>
      </div>
      <div class="col-sm-6 social-login">
        <a href="<%= user_omniauth_authorize_path(:google_oauth2) %>">
          <img class="img-responsive" src="<%= asset_path 'login-google.jpg' %>" alt="Log In With Google">
        </a>
      </div>
    </div>
  </div>

</body>
